<Window x:Class="wpf.Popup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Verification Code" Height="300" Width="300">
    <StackPanel FocusManager.FocusedElement="{Binding ElementName=verificationCode}" Margin="0,2,0,-2">
        <Label>
            Enter verification code:
        </Label>
        <TextBox Name="verificationCode" Width="250" Margin="5" HorizontalAlignment="Left"></TextBox>
            <Button IsDefault="True" Name="sendResponse" Margin="5" Click="sendResponse_Click_1" HorizontalAlignment="Center" Width="50px">OK</Button>
    </StackPanel>
</Window>
